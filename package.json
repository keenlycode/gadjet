{
    "name": "gadjet",
    "version": "0.1.12dev",
    "description": "Adaptive HTML UI Framework",
    "keywords": [
        "html5",
        "javascript",
        "css",
        "css-in-js",
        "ui",
        "user interface"
    ],
    "repository": {
        "repository": {
            "type": "git",
            "url": "https://github.com/nitipit/gadjet"
        }
    },
    "url": "https://nitipit.github.io/gadjet/",
    "homepage": "https://nitipit.github.io/gadjet/",
    "author": "Nitipit Nontasuwan <nitipit@gmail.com>",
    "license": "MIT",
    "files": [
        "dist/**/*",
        "src/**/*"
    ],
    "targets": {
        "normalize.css": {
            "source": "node_modules/normalize.css/normalize.css",
            "sourceMap": true,
            "distDir": "dist/css/",
            "optimize": true
        },
        "gadjet.js": {
            "source": "src/gadjet.ts",
            "sourceMap": true,
            "distDir": "dist/bundle/",
            "outputFormat": "global",
            "optimize": true
        },
        "module": {
            "source": "src/gadjet.ts",
            "sourceMap": true,
            "distDir": "dist/module/",
            "outputFormat": "esmodule",
            "isLibrary": true,
            "optimize": true
        },
        "docs": {
            "sourceMap": true,
            "distDir": "docs/",
            "optimize": true
        }
    },
    "dependencies": {
        "@emotion/css": "^11.5.0",
        "@popperjs/core": "^2.11.0",
        "@tiptap/core": "^2.0.0-beta.129",
        "@tiptap/extension-floating-menu": "^2.0.0-beta.37",
        "@tiptap/starter-kit": "^2.0.0-beta.131",
        "normalize.css": "^8.0.1",
        "uhtml": "^2.7.6",
        "color": "^4.2.3",
        "highlight.js": "^11.3.1",
        "@nitipit/adapter": "file:../adapter",
        "gadjet": "file:./"
    },
    "devDependencies": {
        "@parcel/packager-xml": "^2.2.1",
        "@parcel/transformer-sass": "^2.2.1",
        "@parcel/transformer-xml": "^2.2.1",
        "@types/node": "^18.11.9",
        "parcel": "^2.2.1",
        "sass": "^1.43.4"
    }
}
