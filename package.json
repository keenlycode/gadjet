{
    "name": "gadjet",
    "version": "1.0.0-dev",
    "description": "Adaptive HTML UI Framework",
    "keywords": [
        "html5",
        "javascript",
        "css",
        "css-in-js",
        "ui",
        "user interface"
    ],
    "repository": {
        "repository": {
            "type": "git",
            "url": "https://github.com/nitipit/gadjet"
        }
    },
    "url": "https://nitipit.github.io/gadjet/",
    "homepage": "https://nitipit.github.io/gadjet/",
    "author": "Nitipit Nontasuwan <nitipit@gmail.com>",
    "license": "MIT",
    "files": [
        "dist/**/*",
        "src/**/*"
    ],
    "targets": {
        "normalize.css": {
            "source": "node_modules/normalize.css/normalize.css",
            "sourceMap": true,
            "distDir": "dist/css/",
            "optimize": true
        },
        "bundle": {
            "sourceMap": true,
            "distDir": "dist/bundle/",
            "outputFormat": "global",
            "optimize": true
        },
        "docs": {
            "sourceMap": true,
            "distDir": "docs/",
            "optimize": true
        }
    },
    "dependencies": {
        "@emotion/css": "^11.5.0",
        "@tiptap/core": "^2.0.0-beta.129",
        "@tiptap/extension-floating-menu": "^2.0.0-beta.37",
        "@tiptap/starter-kit": "^2.0.0-beta.131",
        "color": "^4.2.3",
        "gadjet": "file:./",
        "uhtml": "^2.7.6"
    },
    "devDependencies": {
        "@nitipit/icon": "^0.0.6",
        "@parcel/packager-xml": "^2.8.0",
        "@parcel/transformer-sass": "^2.8.0",
        "@parcel/transformer-xml": "^2.8.0",
        "@types/node": "^18.11.10",
        "parcel": "^2.8.0",
        "sass": "^1.43.4",
        "typescript": "^4.9.3",
        "highlight.js": "^11.3.1"
    }
}
