{
    "name": "gadjet",
    "version": "1.0.4",
    "description": "HTML user interface with component based styles",
    "keywords": [
        "html5",
        "javascript",
        "css",
        "css-in-js",
        "ui",
        "user interface"
    ],
    "repository": {
        "repository": {
            "type": "git",
            "url": "https://github.com/nitipit/gadjet"
        }
    },
    "url": "https://nitipit.github.io/gadjet/",
    "homepage": "https://nitipit.github.io/gadjet/",
    "author": "Nitipit Nontasuwan <nitipit@gmail.com>",
    "license": "MIT",
    "files": [
        "dist/**/*",
        "src/**/*"
    ],
    "browserslist": "> 0.5%, last 2 versions, not dead",
    "scripts": {
        "build": "parcel build --no-cache --target normalize.css --target node-esmodule --target browser-esmodule",
        "docs": "parcel build --no-cache --target docs 'docs-src/**/*.(js|ts)'",
        "docs-watch": "parcel watch --no-cache --target docs 'docs-src/**/*.(js|ts)'"
    },
    "module": "dist/module/gadjet.js",
    "browser": "dist/browser/gadjet.js",
    "targets": {
        "normalize.css": {
            "source": "node_modules/normalize.css/normalize.css",
            "sourceMap": true,
            "distDir": "dist/normalize/",
            "optimize": true
        },
        "node-esmodule": {
            "source": [
                "src/dist/gadjet.ts",
                "src/dist/html-editor.ts",
                "src/dist/style.ts"
            ],
            "distDir": "dist/module/",
            "context": "node",
            "sourceMap": true,
            "optimize": true,
            "outputFormat": "esmodule",
            "isLibrary": true
        },
        "browser-esmodule": {
            "source": [
                "src/dist/gadjet.ts",
                "src/dist/html-editor.ts",
                "src/dist/style.ts"
            ],
            "distDir": "dist/browser/",
            "context": "browser",
            "sourceMap": true,
            "optimize": true,
            "outputFormat": "esmodule",
            "isLibrary": false
        },
        "docs": {
            "distDir": "docs/",
            "sourceMap": true,
            "optimize": true,
            "outputFormat": "global"
        }
    },
    "devDependencies": {
        "@nitipit/icon": "^1.0.0",
        "gadjet": "file:./",
        "highlight.js": "^11.8.0",
        "normalize.css": "^8.0.1",
        "parcel": "^2.9.1"
    },
    "dependencies": {
        "@emotion/css": "^11.11.0",
        "@nitipit/adapter": "^1.0.1",
        "@tiptap/core": "^2.0.3",
        "@tiptap/extension-floating-menu": "^2.0.3",
        "@tiptap/extension-heading": "^2.0.3",
        "@tiptap/starter-kit": "^2.0.3",
        "color": "^4.2.3",
        "uhtml": "^3.1.0"
    }
}
