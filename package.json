{
    "name": "gadjet",
    "version": "1.0.4",
    "description": "HTML user interface with component based styles",
    "keywords": [
        "html5",
        "javascript",
        "css",
        "css-in-js",
        "ui",
        "user interface"
    ],
    "repository": {
        "repository": {
            "type": "git",
            "url": "https://github.com/nitipit/gadjet"
        }
    },
    "url": "https://nitipit.github.io/gadjet/",
    "homepage": "https://nitipit.github.io/gadjet/",
    "author": "Nitipit Nontasuwan <nitipit@gmail.com>",
    "license": "MIT",
    "files": [
        "dist/**/*",
        "src/**/*"
    ],
    "scripts": {
        "build": "parcel build --no-cache --target normalize.css --target esmodule --target global",
        "docs": "parcel build --no-cache --target docs 'docs-src/**/*.(js|ts)'",
        "docs-watch": "parcel watch --no-cache --target docs 'docs-src/**/*.(js|ts)'"
    },
    "module": "dist/module/gadjet.js",
    "main": "dist/cjs/gadjet.js",
    "targets": {
        "normalize.css": {
            "source": "node_modules/normalize.css/normalize.css",
            "sourceMap": true,
            "distDir": "dist/normalize/",
            "optimize": true
        },
        "esmodule": {
            "source": "src/dist/module/gadjet.ts",
            "distDir": "dist/module/",
            "sourceMap": true,
            "optimize": true,
            "outputFormat": "esmodule",
            "isLibrary": true
        },
        "global": {
            "source": "src/dist/global/gadjet.ts",
            "distDir": "dist/global/",
            "context": "browser",
            "sourceMap": true,
            "optimize": true,
            "outputFormat": "global",
            "isLibrary": true
        },
        "docs": {
            "distDir": "docs/",
            "sourceMap": true,
            "optimize": true,
            "outputFormat": "global"
        }
    },
    "devDependencies": {
        "@nitipit/icon": "^0.0.6",
        "@types/color": "^3.0.3",
        "@types/node": "^18.11.10",
        "highlight.js": "^11.3.1",
        "normalize.css": "^8.0.1",
        "parcel": "^2.9.1",
        "typescript": "^5.1.3",
        "@emotion/css": "^11.5.0",
        "@nitipit/adapter": "^1.0.1",
        "@tiptap/core": "^2.0.3",
        "@tiptap/extension-floating-menu": "^2.0.3",
        "@tiptap/starter-kit": "^2.0.3",
        "color": "^4.2.3",
        "uhtml": "^2.7.6"
    }
}
